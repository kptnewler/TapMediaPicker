<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black_primary"
    >

    <ImageView
        android:id="@+id/iv_album_cover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:background="@color/white"
        />

    <com.tap.intl.lib.intl_widget.widget.text.TapText
        android:id="@+id/tv_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/intl_body_12_regular"
        app:layout_constraintStart_toEndOf="@+id/iv_album_cover"
        app:layout_constraintTop_toTopOf="@+id/iv_album_cover"
        app:layout_constraintBottom_toBottomOf="@+id/iv_album_cover"
        android:layout_marginStart="8dp"
        android:textColor="@color/black_opacity70"
        tools:text="全部"
        android:maxLines="1"
        />

    <com.tap.intl.lib.intl_widget.widget.text.TapText
        android:id="@+id/tv_album_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/intl_caption_11_regular"
        app:layout_constraintStart_toEndOf="@+id/tv_album_name"
        android:textColor="@color/black_opacity60"
        app:layout_constraintTop_toTopOf="@+id/tv_album_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_album_name"
        android:layout_marginStart="4dp"
        tools:text="1111"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_album_cover"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/divider"
        />

</androidx.constraintlayout.widget.ConstraintLayout>